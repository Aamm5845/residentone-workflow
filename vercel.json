{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install --legacy-peer-deps --prefer-offline",
  "env": {
    "NEXTAUTH_URL": "https://studioflow-workflow.vercel.app"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_NAME": "StudioFlow by Meisner Interiors",
      "NEXT_PUBLIC_COMPANY_NAME": "Interior Design Studio"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/ffe/v2/rooms/*/ai-generate/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "app/api/client-approval/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/renderings/*/push-to-client/route.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/renderings/*/upload/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "app/api/projects/*/sources/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "app/api/projects/[id]/updates/[updateId]/survey-photos/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "app/api/projects/[id]/updates/[updateId]/blob-photo/route.ts": {
      "maxDuration": 30
    },
    "app/api/blob-upload/route.ts": {
      "maxDuration": 30
    },
    "app/api/stages/**/upload/*.ts": {
      "maxDuration": 300
    },
    "app/api/backup/**/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/admin/backup-complete/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-backup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-resolved-issues",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/timesheet-reminders",
      "schedule": "0 14 * * 1-4"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    }
  ]
}
