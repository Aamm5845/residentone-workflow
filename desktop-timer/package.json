{
  "name": "studioflow-timer",
  "version": "1.3.0",
  "description": "Lightweight floating time tracker for StudioFlow",
  "author": "Meisner Interiors",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.studioflow.timer",
    "productName": "StudioFlow Timer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "StudioFlow Timer",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "guid": "studioflow-timer",
      "uninstallDisplayName": "StudioFlow Timer"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "icon.ico",
      "icon.png",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "main.js"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  }
}
