# Copy this file to .env.local and fill in your actual values

# Dropbox API Configuration
# Get these from: https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY="your-dropbox-app-key-here"
DROPBOX_APP_SECRET="your-dropbox-app-secret-here"
# Use refresh token for better authentication (recommended)
DROPBOX_REFRESH_TOKEN="your-dropbox-refresh-token-here"
# OR use access token (legacy, expires frequently)
# DROPBOX_ACCESS_TOKEN="your-dropbox-access-token-here"

# Dropbox Business Configuration
DROPBOX_TEAM_FOLDER_PATH="/Your Team Folder Name"
DROPBOX_SELECT_USER="team.member@yourdomain.com"

# CloudConvert API (for CAD to PDF conversion)
CLOUDCONVERT_API_KEY="your-cloudconvert-api-key-here"
CLOUDCONVERT_SANDBOX="true"  # Set to false for production

# Vercel Blob Storage (for PDF caching)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token-here"

# Other required environment variables (copy from your existing setup)
# DATABASE_URL="your-database-url"
# NEXTAUTH_URL="http://localhost:3000"
# NEXTAUTH_SECRET="your-nextauth-secret"
# ... (other variables as needed)
