# Database Configuration (PostgreSQL for production)
DATABASE_URL="postgresql://username:password@localhost:5432/residentone_db?schema=public"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/residentone_shadow?schema=public"

# Environment
NODE_ENV="development"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secure-secret-key-change-in-production-minimum-32-characters"
JWT_SECRET="your-jwt-secret-for-client-approval-tokens"

# Backup Cron Security
CRON_SECRET="your-random-string-for-manual-backup-testing"

# ðŸš€ ENTERPRISE CLOUD STORAGE (Vercel Blob) - Primary Solution
# Configure Vercel Blob for scalable file storage:
# Get this token by running: npx vercel blob store add workflow-files
# Then pull with: npx vercel env pull .env.local
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_your-token-here"

# Alternative: AWS S3 Storage (Optional - if you prefer AWS over Vercel Blob)
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_S3_BUCKET="your-interior-design-files-bucket"
# AWS_CLOUDFRONT_URL="https://your-cloudfront-domain.com"  # Optional CDN
# Email Configuration - Mailgun (Production) - Recommended
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="yourdomain.com"
MAILGUN_URL="https://api.mailgun.net"
EMAIL_FROM="ResidentOne <noreply@yourdomain.com>"

# Email Fallback - SMTP (Alternative)
# EMAIL_HOST="smtp.gmail.com"
# EMAIL_PORT="587"
# EMAIL_USER="your-email@gmail.com"
# EMAIL_PASSWORD="your-app-password"

# Email Development - MailHog (Local testing)
# EMAIL_HOST="localhost"
# EMAIL_PORT="1025"

# Application Configuration
APP_NAME="ResidentOne"
APP_URL="http://localhost:3000"
COMPANY_NAME="Your Interior Design Studio"

# Auto-Fix Feature (GitHub Actions + Claude)
# Enable/disable automatic issue fixing (default: true)
AUTO_FIX_ENABLED="true"
# GitHub Personal Access Token with repo and workflow permissions
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN="ghp_your-github-personal-access-token"
# Your GitHub repository in format: owner/repo
GITHUB_REPO="your-username/residentone-workflow"
# Webhook secret for GitHub Actions callback (generate a random string)
APP_WEBHOOK_SECRET="your-random-webhook-secret-string"

# Dropbox API Configuration (for file storage and CAD access)
# Get from: https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY="your-dropbox-app-key"
DROPBOX_APP_SECRET="your-dropbox-app-secret"
DROPBOX_ACCESS_TOKEN="your-dropbox-access-token"
DROPBOX_REFRESH_TOKEN="your-dropbox-refresh-token"
DROPBOX_API_SELECT_USER="team-member-id-for-business-accounts"
DROPBOX_ROOT_NAMESPACE_ID="team-folder-namespace-id"

# CloudConvert API (for CAD to PDF conversion)
CLOUDCONVERT_API_KEY="your-cloudconvert-api-key"
CLOUDCONVERT_SANDBOX="false"

# Twilio SMS Configuration (for mention notifications)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google Maps API (for address autocomplete)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Zoom OAuth Integration (for auto-creating Zoom meetings)
# Get from: https://marketplace.zoom.us/develop/create (General App / OAuth type)
ZOOM_CLIENT_ID="your-zoom-client-id"
ZOOM_CLIENT_SECRET="your-zoom-client-secret"
ZOOM_REDIRECT_URI="http://localhost:3000/api/integrations/zoom/callback"

# Encryption Key (for encrypting OAuth tokens at rest)
# Generate a 64-hex-char (32-byte) key: openssl rand -hex 32
ENCRYPTION_KEY="your-64-hex-character-encryption-key-change-in-production"

CRON_SECRET="test123"

